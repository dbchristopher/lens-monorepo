{
  "name": "looker-lens-root",
  "private": true,
  "scripts": {
    "test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage",
    "deploy": "FORCE_COLOR=true lerna run deploy",
    "docz:dev": "docz dev --typescript",
    "docz:build": "docz build --typescript"
  },
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/components",
      "packages/icons",
      "packages/design-tokens",
      "packages/styleguide"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "devDependencies": {
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "docz": "^2.0.0-rc.38",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "dependencies": {
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.5",
    "@types/styled-components": "^4.1.19",
    "@types/styled-system": "^5.1.1",
    "babel-eslint": "10.0.1",
    "clean-tag": "^3.1.1",
    "csstype": "^2.6.6",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "looker-lens-design-tokens": "1.0.0",
    "lodash": "^4.17.15",
    "polished": "^3.4.1",
    "scheduler": "0.15.0",
    "styled-components": "^4.3.2",
    "styled-system": "3.2.1",
    "typescript": "^3.6.3"
  },
  "files": [
    "src/",
    "doczrc.js",
    "tsconfig.json",
    "package.json"
  ],
  "resolutions": {
    "scheduler": "0.15.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/setupTests.{js,jsx,ts,tsx}",
      "!src/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}",
      "!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
    ]
  }
}
